{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://imagefront.dev/schemas/contract.schema.json",
  "title": "Backend Contract",
  "description": "Schema for backend API contracts - defines services, endpoints, models, derived from component manifests",
  "type": "object",
  "required": ["version", "services"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Contract version"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "finalized"],
      "description": "Whether this is a draft or final version"
    },
    "services": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "endpoints"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Service name",
            "examples": ["AuthService", "UserService", "PostService"]
          },
          "description": {
            "type": "string"
          },
          "baseUrl": {
            "type": "string",
            "description": "Base URL for this service",
            "examples": ["/api/v1/auth", "/api/v1/users"]
          },
          "endpoints": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["path", "method"],
              "properties": {
                "path": {
                  "type": "string",
                  "description": "Endpoint path",
                  "examples": ["/login", "/users/{id}", "/posts"]
                },
                "method": {
                  "type": "string",
                  "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"]
                },
                "summary": {
                  "type": "string",
                  "description": "Short summary of what this endpoint does"
                },
                "description": {
                  "type": "string"
                },
                "requestBody": {
                  "type": "object",
                  "properties": {
                    "contentType": {
                      "type": "string",
                      "default": "application/json"
                    },
                    "schema": {
                      "type": "object",
                      "description": "JSON Schema for request body"
                    }
                  }
                },
                "responses": {
                  "type": "object",
                  "patternProperties": {
                    "^[0-9]{3}$": {
                      "type": "object",
                      "properties": {
                        "description": {
                          "type": "string"
                        },
                        "schema": {
                          "type": "object",
                          "description": "JSON Schema for response"
                        }
                      }
                    }
                  },
                  "description": "HTTP responses by status code"
                },
                "authentication": {
                  "type": "boolean",
                  "description": "Whether authentication is required"
                },
                "authorization": {
                  "type": "object",
                  "properties": {
                    "roles": {
                      "type": "array",
                      "items": {"type": "string"}
                    },
                    "permissions": {
                      "type": "array",
                      "items": {"type": "string"}
                    }
                  }
                },
                "rateLimit": {
                  "type": "object",
                  "properties": {
                    "requests": {"type": "number"},
                    "window": {"type": "string"}
                  }
                },
                "derivedFrom": {
                  "type": "array",
                  "items": {"type": "string"},
                  "description": "Screen/component IDs that need this endpoint"
                }
              }
            }
          },
          "models": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name"],
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "properties": {
                  "type": "object",
                  "description": "Model properties as JSON Schema"
                }
              }
            }
          }
        }
      }
    }
  }
}
