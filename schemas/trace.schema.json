{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://imagefront.dev/schemas/trace.schema.json",
  "title": "Golden Trace",
  "description": "Schema for UX flow golden traces - defines step-by-step user journey through screens",
  "type": "object",
  "required": ["scenarioId", "version", "steps"],
  "properties": {
    "scenarioId": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9]*(-[a-z0-9]+)*$",
      "description": "Scenario identifier in kebab-case",
      "examples": ["user-registration-flow", "checkout-process"]
    },
    "version": {
      "type": "string",
      "pattern": "^v\\d+$"
    },
    "description": {
      "type": "string",
      "description": "High-level description of this scenario"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["stepId", "screen", "action"],
        "properties": {
          "stepId": {
            "type": "number",
            "minimum": 1,
            "description": "Sequential step number"
          },
          "screen": {
            "type": "string",
            "description": "Screen ID for this step"
          },
          "description": {
            "type": "string",
            "description": "What happens in this step"
          },
          "action": {
            "type": "object",
            "required": ["type"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["navigate", "click", "input", "select", "wait", "verify", "submit"],
                "description": "Type of action"
              },
              "target": {
                "type": "string",
                "description": "Target element (annotation ID or URL)"
              },
              "value": {
                "description": "Value to input/select"
              },
              "description": {
                "type": "string"
              }
            }
          },
          "expectedState": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "description": "Expected URL after this step"
              },
              "elementStates": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                },
                "description": "Expected element states (visible, enabled, etc.)"
              },
              "dataStates": {
                "type": "object",
                "description": "Expected data/state values"
              }
            }
          },
          "apiCalls": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "endpoint": {
                  "type": "string"
                },
                "method": {
                  "type": "string",
                  "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"]
                },
                "requestPayload": {
                  "type": "object"
                },
                "expectedResponseCode": {
                  "type": "number",
                  "minimum": 100,
                  "maximum": 599
                }
              }
            }
          },
          "timing": {
            "type": "object",
            "properties": {
              "wait": {
                "type": "number",
                "description": "Milliseconds to wait before this step"
              },
              "timeout": {
                "type": "number",
                "description": "Max milliseconds for this step to complete"
              }
            }
          }
        }
      }
    },
    "linkedRequirements": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Requirements covered by this trace"
    }
  }
}
